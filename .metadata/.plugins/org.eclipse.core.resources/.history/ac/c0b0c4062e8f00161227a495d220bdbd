package group01;

import java.awt.Point;
import java.util.ArrayList;		// ArrayList
import java.util.TreeMap;		// Binary Search Tree
import java.util.PriorityQueue; // Heap

public class DynamicConvexHull {
	public static void main(String[] args) {
		PointReader pr = new PointReader();
		DrawConvexHull dch = new DrawConvexHull();
		
		// Array implementation
		ArrayList<Point> chArray = new ArrayList<Point>();

		// TODO: Calculate convex hull.
		
		dch.draw(chArray);
		
		// Binary search tree implementation
		TreeMap chTree = new TreeMap();

		// TODO: Calculate convex hull.
		
		dch.draw(chTree);
		
		// Heap implementation
		PriorityQueue<Point> chHeap = new PriorityQueue<Point>();

		// TODO: Calculate convex hull.
		
		dch.draw(chHeap);
	}
}
